{
  "compilerOptions": {
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "module": "CommonJS"
  },
  "exclude": ["node_modules"],
  "include": ["src", "index.d.ts"]
}
